<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tatlicilar.downtoup.Login"
    android:orientation="vertical"
    android:background="@drawable/bulut">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="2"
        android:gravity="center">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/ikon"
            android:src="@drawable/angl"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_weight="7"
        android:orientation="vertical"
        android:weightSum="7"> 

        <EditText
            android:layout_margin="1dp"
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="#FFFAF0"
            android:hint="E-mail"
            android:drawableStart="@drawable/ic_person_black_24dp"
            android:inputType="textEmailAddress" />

        <EditText
            android:layout_margin="1dp"
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Parola"
            android:drawableStart="@drawable/ic_lock_black_24dp"
            android:inputType="textPassword"
            android:background="#FFFAF0" />

        <Button
            android:id="@+id/girisBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="#FF4500"
            android:text="Giriş"
            android:textAllCaps="false"
            android:textColor="#FFFAF0"
            tools:layout_editor_absoluteX="267dp"
            tools:layout_editor_absoluteY="283dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <CheckBox
                android:id="@+id/beniHatirla"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:checked="false"
                android:text="Beni Hatırla"
                android:textColor="#FFFAF0" />

            <Button
                android:id="@+id/forgot"
                android:layout_width="150dp"
                android:background="#00000000"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:textAllCaps="false"
                android:text="Parolamı unuttum"
                android:textColor="#FFFAF0" />
            <!--<com.facebook.login.widget.LoginButton-->
            <!--android:id="@+id/facebook2"-->
            <!--android:layout_width="180dp"-->
            <!--android:layout_height="20dp"-->
            <!--android:layout_marginLeft="80dp"-->
            <!--android:layout_marginTop="30dp" />-->

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/kayitBtn"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="50dp"
                android:background="#FF9900"
                android:textAllCaps="false"
                android:text="E-Posta ile kaydolun"
                android:textColor="#FFFAF0"/>

            <!--<Button-->
                <!--android:id="@+id/google2"-->
                <!--android:layout_width="200dp"-->
                <!--android:layout_height="40dp"-->
                <!--android:layout_marginLeft="85dp"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:background="@drawable/google">-->
            <!--</Button>-->

            <com.google.android.gms.common.SignInButton
                android:id="@+id/google2"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="10dp"
            android:background="@drawable/google">
            </com.google.android.gms.common.SignInButton>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>