<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tatlicilar.downtoup.fragment.Ebook">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        android:weightSum="1"
        android:background="@color/white">

        <ImageView
            android:id="@+id/image"
            android:layout_width="200dp"
            android:layout_height="240dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:contentDescription="@null"
            android:background="@drawable/gelisimpsikolojisi"
            android:layout_weight="0.13" />

        <Button
            android:id="@+id/btn_download_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dosya olarak indir"
            android:background="@color/colorPrimary"
            android:layout_marginBottom="51dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btn_goruntule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Online oku"
            android:background="@color/colorPrimary"
            android:layout_marginBottom="22dp"
            android:layout_above="@+id/btn_download_file"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</FrameLayout>
